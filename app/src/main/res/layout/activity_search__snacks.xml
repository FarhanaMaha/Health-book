<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.smartalarm.new_maha.Search_Snacks">
       <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/search_snacks"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:hint="Search Food......."
            android:textStyle="bold"
            android:inputType="textVisiblePassword"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/add_data4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-10dp"
            android:text="add"/>
    </LinearLayout>
    <ListView
        android:id="@+id/list_view4"
        android:layout_width="match_parent"
        android:layout_height="280dp">

    </ListView>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="120dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Food Item"
                android:drawableLeft="@drawable/ic_border_inner_black_24dp"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"/>
            <Button
                android:id="@+id/send_snacks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:text="Send"/>
        </LinearLayout>

        <ListView
            android:id="@+id/list_add4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
        <TextView
            android:id="@+id/add_calories4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=""/>

    </LinearLayout>


    <!--<android.support.v7.widget.RecyclerView-->
    <!--android:id="@+id/recycal_view"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginTop="100dp">-->
    <!--</android.support.v7.widget.RecyclerView>-->

</RelativeLayout>



